<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.SplashFragment">

    <ImageView
        android:id="@+id/splash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:scaleType="fitXY"
        android:src="@drawable/ingredients" />

    <TextView
        android:id="@+id/kitchen_background"
        android:layout_width="@dimen/fragment_splash_kitchen_background_layoit_width"
        android:layout_height="@dimen/fragment_splash_kitchen_background_layoit_height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/fragment_splash_kitchen_background_layout_marginTop"
        android:alpha="0.7"
        android:background="@color/fragment_splash_kitchen_background"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/kitchen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/fragment_splash_kitchen_layout_marginTop"
        android:alpha="1"
        android:gravity="center"
        android:text="@string/fragment_splash_kitchen_textview_text"
        android:textColor="@color/fragment_splash_kitchen_textColor"
        android:textSize="@dimen/fragment_splash_kitchen_textSize"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lolita_background"
        android:layout_width="@dimen/fragment_splash_lolita_background_layout_width"
        android:layout_height="@dimen/fragment_splash_lolita_background_layout_height"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/fragment_splash_lolita_background_layout_marginTop"
        android:alpha="0.7"
        android:background="@color/fragment_splash_lolita_background" />

    <TextView
        android:id="@+id/lolita"
        android:layout_width="@dimen/fragment_splash_lolita_layout_width"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/fragment_splash_lolita_layout_marginTop"
        android:alpha="1"
        android:fontFamily="cursive"
        android:gravity="center"
        android:text="@string/fragment_splash_lolita_textview_text"
        android:textColor="@color/fragment_splash_lolita_textview_textColor"
        android:textSize="@dimen/fragment_splash_lolita_textview_textSize"
        android:textStyle="italic" />

</RelativeLayout>