<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/display_all_meal_itemview_cardview_layout_marginStart_End"
        android:layout_marginTop="@dimen/display_all_meal_itemview_cardview_layout_margin"
        android:layout_marginEnd="@dimen/display_all_meal_itemview_cardview_layout_marginStart_End"
        android:layout_marginBottom="@dimen/display_all_meal_itemview_cardview_layout_margin"
        android:outlineSpotShadowColor="@color/display_all_meal_itemview_cardview_outlineShadowColor"
        app:cardCornerRadius="@dimen/display_all_meal_itemview_cardview_cardCornerRadius"
        app:cardElevation="@dimen/display_all_meal_itemview_cardview_cardElevation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mealName_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/display_all_meal_itemview_name_textview_background"
                android:gravity="center_horizontal"
                android:textColor="@color/display_all_meal_itemview_name_textview_textColor"
                android:textSize="@dimen/display_all_meal_itemview_mealName_textView_textSize"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/mealImage_imageview"
                android:layout_width="match_parent"
                android:layout_height="@dimen/display_all_meal_itemview_mealImage_height"
                android:scaleType="fitXY" />
        </LinearLayout>


    </android.support.v7.widget.CardView>


</android.support.constraint.ConstraintLayout>