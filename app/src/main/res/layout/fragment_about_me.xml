<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/ingredients"
    android:orientation="vertical"
    tools:context=".fragments.AboutMeFragment">


    <ImageView
        android:id="@+id/about_me_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/fragment_about_me_imageview_layout_margin"
        android:contentDescription="@string/fragment_about_me_imageView_contentDescription"
        android:src="@drawable/lola_pic" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/fragment_about_me_cardview_layout_margin"
        android:alpha="0.7"
        app:cardBackgroundColor="#edb06d">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="start"
            android:text="@string/about_me_textview_text"
            android:textColor="@color/fragment_about_me_cardview_textview_textColor" />

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/about_me_linkedIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:autoLink="web"
        android:clickable="true"
        android:focusable="true"
        android:linksClickable="true"
        android:text="@string/fragment_about_me_textView_text_linkedIn"
        android:textColor="@color/fragment_about_me_linkedIn_textview_textColor"
        android:textSize="@dimen/fragment_about_me_textSize_linkedIn" />

    <TextView
        android:id="@+id/about_me_github"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:autoLink="web"
        android:clickable="true"
        android:focusable="true"
        android:linksClickable="true"
        android:text="@string/fragment_about_me_textView_text_gitHub"
        android:textColor="@color/fragment_about_me_github_textview_textColor"
        android:textSize="@dimen/fragment_about_me_textSize_gitHub" />

</LinearLayout>

