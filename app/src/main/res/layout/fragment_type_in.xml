<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.TypeInFragment">

    <!--<android.support.v7.widget.SearchView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:text="Type In"-->
    <!--android:textSize="30sp"-->
    <!--android:gravity="center_horizontal"-->
    <!--android:layout_centerInParent="true"/>-->

    <EditText
        android:id="@+id/type_in_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Ingredients" >

        <requestFocus/>
    </EditText>

    <Button
        android:id="@+id/type_in_add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add" />

    <ListView
        android:id="@+id/type_in_ingredients_listview"
        android:layout_width="match_parent"
        android:layout_height="300dp">

    </ListView>

    <Button
        android:id="@+id/type_in_show_recipe_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#d8940d"
        android:fontFamily="casual"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Show Recipes"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>