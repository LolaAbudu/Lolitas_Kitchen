<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.TypeInFragment">

    <EditText
        android:id="@+id/type_in_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Ingredients"
        android:layout_margin="8dp">

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/type_in_add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:textColor="#E7F2F8"
        android:background="#FFA384"
        android:fontFamily="casual"
        android:gravity="center"
        android:layout_marginStart="8dp"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <ListView
        android:id="@+id/type_in_ingredients_listview"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="8dp">

    </ListView>

    <Button
        android:id="@+id/type_in_show_recipe_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#FFA384"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="Show Recipes"
        android:textColor="#E7F2F8"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>

