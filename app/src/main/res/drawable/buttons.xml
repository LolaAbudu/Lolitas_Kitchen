<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="32dip" />
            <stroke android:width="1dip" android:color="#B7AC44" />
            <gradient android:angle="-90" android:startColor="#B7AC44" android:endColor="#663d00"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="32dip" />
            <stroke android:width="1dip" android:color="#B7AC44" />
            <solid android:color="#B7AC44"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="32dip" />
            <stroke android:width="1dip" android:color="#129983" />
            <gradient android:angle="-90" android:startColor="#B7AC44" android:endColor="#129983" />
        </shape>
    </item>
</selector>